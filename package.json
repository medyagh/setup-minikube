{
  "name": "minikube-action",
  "version": "0.0.18",
  "private": true,
  "description": "start a kubernetes cluster in github actions",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "pack": "ncc build",
    "test": "jest",
    "all": "npm run build && npm run format && npm run lint && npm run pack && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/medyagh/setup-minikube"
  },
  "keywords": [
    "minikube",
    "minikube CI",
    "test aginst kubernetes",
    "test kubernetes",
    "kuberentes CI",
    "kubernetes",
    "kubernetes cluster",
    "github",
    "actions"
  ],
  "author": "medyagh",
  "license": "MIT",
  "dependencies": {
    "@actions/cache": "^4.0.0",
    "@actions/core": "^1.11.1",
    "@actions/exec": "^1.1.1",
    "@actions/tool-cache": "^2.0.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.17",
    "@typescript-eslint/eslint-plugin": "^8.26.1",
    "@typescript-eslint/parser": "^8.33.1",
    "@vercel/ncc": "^0.38.3",
    "eslint": "^9.26.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-github": "^5.1.8",
    "eslint-plugin-jest": "^28.11.0",
    "jest": "^29.7.0",
    "jest-circus": "^29.7.0",
    "js-yaml": "^4.1.0",
    "prettier": "^3.5.3",
    "ts-jest": "^29.2.6",
    "typescript": "^5.8.3"
  }
}
